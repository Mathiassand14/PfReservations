# Equipment Rental Management - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://equipment_user:equipment_pass@localhost:5432/equipment_rental

# Security Configuration  
X_ADMIN_TOKEN=secure-admin-token-change-in-production

# Application Configuration
APP_NAME=Equipment Rental Management
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info

# Network Configuration (for Docker/LAN deployment)
# Set to your LAN subnet or specific IPs if needed
ALLOWED_ORIGINS=*

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=3s
HEALTH_CHECK_RETRIES=3

# PDF Generation Configuration
PDF_COMPANY_NAME=Your Company Name
PDF_COMPANY_ADDRESS=123 Main St, City, State 12345
PDF_COMPANY_PHONE=(555) 123-4567
PDF_COMPANY_EMAIL=info@yourcompany.com

# Calendar Configuration
CALENDAR_CACHE_TTL=120000
ICS_TIMEZONE=America/New_York
