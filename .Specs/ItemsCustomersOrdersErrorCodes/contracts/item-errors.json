{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item Validation Error Response",
  "type": "object",
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["code", "message"],
            "properties": {
              "code": { "type": "string" },
              "field": { "type": ["string", "null"] },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  }
}

